{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "lib": [
      "esnext.array",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist/ts",
    "paths": { "*": ["src/types/*"] },
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2018"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
